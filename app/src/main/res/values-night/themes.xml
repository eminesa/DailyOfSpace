<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyOfSpace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LauncherFullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--        <item name="android:windowBackground">@color/space_gray</item>-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TextTitleColorAndDarkGray16sp" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Medium32Sp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/ecru</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">99dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="percentWidth">0.69</item>
        <item name="percentHeight">0.5</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_height">0dp</item>
        <item name="rippleColor">@color/ecru</item>
        <item name="android:letterSpacing">0.026</item>
    </style>

    <style name="TextMedium14sp" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/ecru</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.026</item>

    </style>

    <style name="TextMedium20sp" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.026</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.Bg.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/transparent_black</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TextRegularBlackAndWhite17sp" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Settings.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="background">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>